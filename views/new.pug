html 
    head
        title New character 
    body
        h1 New character
        a(href=`/list`) Back
        form(method='post' action='/createNew')
            label(for='id') ID: 
            input(type='number' name='id' required)
            br
            label(for='name') Name: 
            input(type='text' name='name' required)
            br
            label(for='job') Job: 
            input(type='text' name='job' required)
            br
            label(for='weapon') Weapon: 
            input(type='text' name='weapon' required)
            br
            label(for='level') Level: 
            input(type='number' name='level' required)
            br
            button(type='submit') Send